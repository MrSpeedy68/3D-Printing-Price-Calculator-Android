<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/printerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            tools:text="A Name" />

        <TextView
            android:id="@+id/printerPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/printerName"
            tools:text="A Price" />
        <TextView
            android:id="@+id/printerWattUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/printerPrice"
            tools:text="Watt Usage" />
        <TextView
            android:id="@+id/investReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/printerWattUsage"
            tools:text="A Price" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>